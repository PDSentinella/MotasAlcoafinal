@model motasAlcoafinal.Models.Encomendas
@{
    ViewData["Title"] = "Criar Encomenda";
}

<h2>Criar Encomenda</h2>

<form asp-action="Create" method="post" class="form-horizontal">
    <div class="form-group">
        <label asp-for="DataPedido" class="control-label"></label>
        <input asp-for="DataPedido" class="form-control" />
        <span asp-validation-for="DataPedido" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control">
            <option value="Pendente">Pendente</option>
            <option value="Entregue">Entregue</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="pecas" class="control-label">Peças</label>
        <select id="pecas" name="pecasIds" class="form-control" multiple>
            @foreach (var peca in ViewBag.Pecas)
            {
                <option value="@peca.Value">@peca.Text</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="quantidades" class="control-label">Quantidades</label>
        <input id="quantidades" name="quantidades" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>