@model motasAlcoafinal.Models.Encomendas
@{
    ViewData["Title"] = "Detalhes da Encomenda";
}

<h2>Detalhes da Encomenda</h2>

<div>
    <h4>Encomenda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Data do Pedido
        </dt>
        <dd class="col-sm-10">
            @Model.DataPedido
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Model.Status
        </dd>
    </dl>
</div>

<h3>Peças Associadas</h3>
<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nome da Peça</th>
            <th>Quantidade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var encomendaPeca in Model.EncomendaPecas)
        {
            <tr>
                <td>@encomendaPeca.Peca.Nome</td>
                <td>@encomendaPeca.Quantidade</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>