@model List<motasAlcoafinal.Models.Motocicletas>
@{
    ViewData["Title"] = "Lista de Motocicletas";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Lista de Motocicletas</h2>
    <a class="btn btn-primary" asp-controller="Motocicletas" asp-action="Create">Criar Motocicleta</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ano</th>
            <th>Placa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var motocicleta in Model)
        {
            <tr>
                <td>@motocicleta.Marca</td>
                <td>@motocicleta.Modelo</td>
                <td>@motocicleta.Ano</td>
                <td>@motocicleta.Placa</td>
                <a asp-action="Details" asp-route-id="@motocicleta.Id" class="btn btn-info">Detalhes</a>
                <a asp-action="Edit" asp-route-id="@motocicleta.Id" class="btn btn-warning">Editar</a>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-controller="Motocicletas" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">&#9664;</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">@ViewBag.CurrentPage</span>
        </li>
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-controller="Motocicletas" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">&#9654;</a>
        </li>
    </ul>
</nav>
