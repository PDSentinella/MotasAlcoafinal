@model motasAlcoafinal.Models.Motocicletas
@{
    ViewData["Title"] = "Detalhes da Motocicleta";
}

<h2>Detalhes da Motocicleta</h2>

<div>
    <h4>Motocicleta</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Marca
        </dt>
        <dd class="col-sm-10">
            @Model.Marca
        </dd>
        <dt class="col-sm-2">
            Modelo
        </dt>
        <dd class="col-sm-10">
            @Model.Modelo
        </dd>
        <dt class="col-sm-2">
            Ano
        </dt>
        <dd class="col-sm-10">
            @Model.Ano
        </dd>
        <dt class="col-sm-2">
            Placa
        </dt>
        <dd class="col-sm-10">
            @Model.Placa
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
