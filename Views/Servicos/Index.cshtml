@model List<motasAlcoafinal.Models.Servicos>
@{
    ViewData["Title"] = "Lista de Serviços";
}

<div class="container mt-4">
    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">🧰 Lista de Serviços</h2>
        <a class="btn btn-primary shadow rounded-pill px-4" asp-controller="Servicos" asp-action="Create">
            <i class="fas fa-plus-circle me-2"></i> Criar Serviço
        </a>
    </div>

    <!-- Barra de Pesquisa -->
    <div class="card shadow-sm p-4 border-start border-4 border-primary mb-4 bg-light">
        <form asp-controller="Servicos" asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control shadow-sm" placeholder="🔍 Pesquisar serviços..." />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search me-1"></i> Pesquisar
                </button>
            </div>
        </form>
    </div>

    <!-- Tabela de Serviços -->
    <div class="card shadow-sm border-start border-4 border-info mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle text-center mb-0">
                <thead class="table-info">
                    <tr>
                        <th>Data</th>
                        <th>Custo Total</th>
                        <th>Motocicleta</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-muted py-4">Nenhum serviço encontrado.</td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var servico in Model)
                        {
                            <tr>
                                <td>@servico.Data.ToString("dd/MM/yyyy")</td>
                                <td>@servico.CustoTotal.ToString("C")</td>
                                <td>@servico.Motocicleta?.Modelo</td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a asp-action="Details" asp-route-id="@servico.Id" class="btn btn-outline-info btn-sm rounded-pill">
                                            <i class="fas fa-eye me-1"></i> Detalhes
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@servico.Id" class="btn btn-outline-warning btn-sm rounded-pill">
                                            <i class="fas fa-edit me-1"></i> Editar
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginação -->
    <nav class="mt-4">
        <ul class="pagination justify-content-center">
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-controller="Servicos" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@ViewBag.SearchString">
                    <i class="fas fa-chevron-left"></i>
                </a>
            </li>
            <li class="page-item disabled">
                <span class="page-link bg-light text-dark fw-bold">@ViewBag.CurrentPage</span>
            </li>
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-controller="Servicos" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@ViewBag.SearchString">
                    <i class="fas fa-chevron-right"></i>
                </a>
            </li>
        </ul>
    </nav>
</div>

<!-- FontAwesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
