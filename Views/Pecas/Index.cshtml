@model List<motasAlcoafinal.Models.Pecas>
@{
    ViewData["Title"] = "Lista de Peças";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Lista de Peças</h2>
    <a class="btn btn-primary" asp-controller="Pecas" asp-action="Create">Criar Peça</a>
</div>

<form asp-controller="Pecas" asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewBag.SearchString" class="form-control" placeholder="Pesquisar peças..." />
        <button type="submit" class="btn btn-primary">Pesquisar</button>
    </div>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade em Estoque</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var peca in Model)
        {
            <tr>
                <td>@peca.Nome</td>
                <td>@peca.Descricao</td>
                <td>@peca.Preco?.ToString("C")</td>
                <td>@peca.QuantidadeEstoque</td>
                <td>
                    <a asp-action="Details" asp-route-id="@peca.Id" class="btn btn-info">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@peca.Id" class="btn btn-warning">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-controller="Pecas" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)" asp-route-searchString="@ViewBag.SearchString">&#9664;</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">@ViewBag.CurrentPage</span>
        </li>
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-controller="Pecas" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)" asp-route-searchString="@ViewBag.SearchString">&#9654;</a>
        </li>
    </ul>
</nav>