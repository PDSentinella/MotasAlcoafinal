@model List<motasAlcoafinal.Models.Clientes>
@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="d-flex justify-content-between align-items-center">
    <h2>Lista de Clientes</h2>
    <a class="btn btn-primary" asp-controller="Clientes" asp-action="Create">Criar Cliente</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Endereço</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.Nome</td>
                <td>@cliente.Telefone</td>
                <td>@cliente.Email</td>
                <td>@cliente.Endereco</td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
            <a class="page-link" asp-controller="Clientes" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage - 1)">&#9664;</a>
        </li>
        <li class="page-item disabled">
            <span class="page-link">@ViewBag.CurrentPage</span>
        </li>
        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
            <a class="page-link" asp-controller="Clientes" asp-action="Index" asp-route-pageNumber="@(ViewBag.CurrentPage + 1)">&#9654;</a>
        </li>
    </ul>
</nav>